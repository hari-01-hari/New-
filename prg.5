<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Main Program - Word & Character Count</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 40px;
            background-color: #f0f0f0;
        }
        textarea {
            width: 100%;
            height: 150px;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            margin-bottom: 10px;
            box-sizing: border-box; /* prevent overflow */
        }
        .counter {
            font-size: 18px;
            color: #333;
        }
    </style>
</head>
<body>
    <h2>Main program: Live Word and Character Counter</h2>
    <textarea id="mainText" name="mainText" placeholder="Start typing here..."></textarea>
    <div class="counter">
        Characters: <span id="mainCharCount">0</span><br />
        Words: <span id="mainWordCount">0</span>
    </div>

    <script>
        const textarea = document.getElementById("mainText");
        const charCount = document.getElementById("mainCharCount");
        const wordCount = document.getElementById("mainWordCount");

        textarea.addEventListener("input", function () {
            const text = this.value;
            charCount.innerText = text.length;

            const trimmed = text.trim();
            // split by one or more whitespace characters, filter out empty strings
            const words = trimmed === "" ? [] : trimmed.split(/\s+/);
            wordCount.innerText = words.length;
        });
    </script>
</body>
</html>
